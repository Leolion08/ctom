@model CTOM.ViewModels.PhongBan.EditPhongBanViewModel

@{
    // Đặt tiêu đề cho trang Edit
    ViewData["Title"] = "Chỉnh sửa Phòng ban";
}

@* Sử dụng container và căn giữa card giống Create.cshtml *@
<div class="container mt-4">
    <div class="card col-md-6 mx-auto">
        @* <div class="card-header bg-primary text-white">
            
            <h3 class="card-title fw-bold">
                
                <i class="ti ti-pencil mr-2"></i> @ViewData["Title"]: @Model.TenPhong
            </h3>
        </div> *@
        <div class="card-header bg-yellow text-white">
            <h3 class="card-title fw-bold mb-0">
                @* <i class="ti ti-edit me-2"></i>   *@
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-building-cog me-2"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M3 21h9" /><path d="M9 8h1" /><path d="M9 12h1" /><path d="M9 16h1" /><path d="M14 8h1" /><path d="M14 12h1" /><path d="M5 21v-16c0 -.53 .211 -1.039 .586 -1.414c.375 -.375 .884 -.586 1.414 -.586h10c.53 0 1.039 .211 1.414 .586c.375 .375 .586 .884 .586 1.414v7" /><path d="M16 18c0 .53 .211 1.039 .586 1.414c.375 .375 .884 .586 1.414 .586c.53 0 1.039 -.211 1.414 -.586c.375 -.375 .586 -.884 .586 -1.414c0 -.53 -.211 -1.039 -.586 -1.414c-.375 -.375 -.884 -.586 -1.414 -.586c-.53 0 -1.039 .211 -1.414 .586c-.375 .375 -.586 .884 -.586 1.414z" /><path d="M18 14.5v1.5" /><path d="M18 20v1.5" /><path d="M21.032 16.25l-1.299 .75" /><path d="M16.27 19l-1.3 .75" /><path d="M14.97 16.25l1.3 .75" /><path d="M19.733 19l1.3 .75" /></svg>
                @ViewData["Title"]: @Model.TenPhong
            </h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-maPhong="@Model.MaPhong">
                @* Trỏ đến action Edit và truyền MaPhong *@

                @Html.AntiForgeryToken() @* Đừng quên AntiForgeryToken *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-important" role="alert"></div> @* Hiển thị lỗi tổng hợp nếu có *@

                <div class="mb-3">
                    @* Sử dụng mb-3 của Bootstrap 5 cho khoảng cách *@
                    <label asp-for="MaPhong" class="form-label required">Mã phòng</label>
                    @* Thêm thuộc tính readonly *@
                    <input asp-for="MaPhong" class="form-control bg-secondary-lt" readonly />
                    <span asp-validation-for="MaPhong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaPhongHR" class="form-label">Mã phòng HR</label>
                    <input asp-for="MaPhongHR" class="form-control" />
                    @* Không cần validation span nếu trường này không bắt buộc *@
                </div>

                <div class="mb-3">
                    <label asp-for="TenPhong" class="form-label required">Tên phòng</label>
                    <input asp-for="TenPhong" class="form-control" />
                    <span asp-validation-for="TenPhong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenVietTat" class="form-label">Tên viết tắt</label>
                    <input asp-for="TenVietTat" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                    @* Dùng select, asp-for sẽ tự động chọn option khớp với Model.TrangThai *@
                    <select asp-for="TrangThai" class="form-select">
                        <option value="A">Active</option>
                        <option value="D">Disabled</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                @* Các nút Lưu và Quay lại - dùng layout giống Create.cshtml *@
                <div class="mt-4 d-flex">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-device-floppy me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M6 4h10l4 4v10a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2" /><path d="M12 14m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" /><path d="M14 4l0 4l-6 0l0 -4" /></svg>
                        Lưu thay đổi
                        </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-auto">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-back-up me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M9 14l-4 -4l4 -4" /><path d="M5 10h11a4 4 0 1 1 0 8h-1" /></svg>
                        Quay lại danh sách
                        </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_CoreValidationScriptsPartial" />
}
