@model CTOM.ViewModels.UserIndexViewModel

@{
    ViewData["Title"] = "Chi tiết Người dùng";
}

<div class="container mt-4">
    <div class="card col-md-8 mx-auto">
        <div class="card-header bg-info text-white">
            <h3 class="card-title fw-bold">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-circle me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><circle cx="12" cy="12" r="9" /><circle cx="12" cy="10" r=".5" /><path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 1 1 0 1.696h-4c-1.47 0 -2.966 -.078 -4 1.832z" /></svg>
                @ViewData["Title"]: @Model.UserName
            </h3>
        </div>
        <div class="card-body">
            @* Sử dụng definition list <dl> để hiển thị thông tin dạng label-value *@
            <dl class="row">
                <dt class="col-sm-3 text-end">ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3 text-end">Tên truy cập</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>

                <dt class="col-sm-3 text-end">Họ và Tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TenUser)</dd>

                <dt class="col-sm-3 text-end">Phòng ban</dt>
                <dd class="col-sm-9">@Model.MaPhong - @Model.TenPhong</dd>

                <dt class="col-sm-3 text-end">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai == "A")
                    {
                        <span class="badge bg-success-subtle">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger-subtle">Disabled</span>
                    }
                </dd>

                <dt class="col-sm-3 text-end">Nhóm quyền</dt>
                <dd class="col-sm-9">
                    @if (Model.Roles != null && Model.Roles.Any())
                    {
                        @string.Join(", ", Model.Roles)
                    }
                    else
                    {
                        <span class="text-muted">Không thuộc nhóm quyền nào</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer mt-4 d-flex">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" /><path d="M16 5l3 3" /></svg>
                Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-auto">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-back-up me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M9 14l-4 -4l4 -4" /><path d="M5 10h11a4 4 0 1 1 0 8h-1" /></svg>
                Quay lại danh sách
            </a>
        </div>
    </div>
</div>

